<Window x:Class="DSP_General.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSP_General"
        mc:Ignorable="d"
        Title="General DSP" Height="550" Width="1000">
    <Grid>
        <TabControl>
            <TabItem Header="播放">
                <Grid Background="#FFE5E5E5">
                    <GroupBox Header="音频播放器" Margin="10,10,10,10" Height="140" Width="320" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Grid>
                            <Button Content="选择文件" HorizontalAlignment="Left" VerticalAlignment="Top" Click="SelectWavFile" Margin="248,10,0,0" Grid.Column="1"/>
                            <TextBox Name="wavPathInput" HorizontalAlignment="Left" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Height="19" Width="185" Margin="58,10,0,0" Grid.Column="1"/>
                            <Label Content="音频文件" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,7,0,0" Grid.ColumnSpan="2"/>
                            <Button Click="LoadWav" Content="加载" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="272,88,0,0" Grid.Column="1"/>
                            <Button Click="PlayAudio" Content="播放" Margin="10,89,270,10"/>
                            <Button Click="PauseAudio" Content="暂停" Margin="43,89,237,10"/>
                            <Button Click="StopAudio" Content="重载" Margin="75,89,205,10"/>
                            <Label Content="进度" Margin="0,37,0,34"/>
                            <Slider Name="audioProgress" Margin="5,59,5,35" Maximum="1" Minimum="0" IsEnabled="False"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="分析">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="635*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <Canvas Name="spectrum" Margin="10,10,0,10" Grid.Column ="0" Background="#FFBBBBBB">
                        <Image Name="spectrumDisplay"/>
                    </Canvas>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="300*"/>
                        </Grid.RowDefinitions>
                        <GroupBox Header="操作" Margin="10,10,10,0" Grid.Row="0">
                            <StackPanel>
                                <!-- <Label Content="监听系统音频" FontSize="10.5"/> -->
                                <CheckBox Click="SwitchListenStatus" Content="监听系统音频" Name="listenAudio"/>
                                <CheckBox Click="SwitchAPTModeClick" Name="aptMode" Content="APT模式"/>
                                <Label Name="timerLabel" Content="(APT Analyze)" Margin="0,0,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="处理" Margin="10,0,10,10" Grid.Row="1">
                            <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="100"/>
                                    <RowDefinition Height="100*"/>
                                </Grid.RowDefinitions>
                                <Label Content="调制" Grid.Row="0"/>
                                <CheckBox Click="NoModulationClick" Name="noModulationBox" Content="原始" Grid.Row="0" Margin="0,25,0,0" IsChecked="True"/>
                                <CheckBox Click="AMClick" Name="amBox" Content="AM" Grid.Row="0" Margin="0,40,0,0"/>
                                <CheckBox Click="AptAmClick" Name="aptAmBox" Content="APT AM" Grid.Row="0" Margin="0,55,0,0"/>
                                <Label Content="模式" Height="100" Width="100" Grid.Row="1"/>
                                <CheckBox Click="WaveBoxClick" Name="waveBox" Content="波形" Grid.Row="1" Margin="0,25,0,0" IsChecked="True"/>
                                <CheckBox Click="FFTBoxClick" Name="fftBox" Content="FFT" Grid.Row="1" Margin="0,40,0,0"/>
                                <CheckBox Click="APTBoxClick" Name="aptBox" Content="APT" Grid.Row="1" Margin="0,55,0,0"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>